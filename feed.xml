---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:media="http://search.yahoo.com/mrss/"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:georss="http://www.georss.org/georss"
     xmlns:turbo="http://turbo.yandex.ru">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <language>ru</language>
    <yandex:analytics id="156723"
                      type="Yandex">
    </yandex:analytics>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    {% for post in site.posts limit:10 %}
      <item turbo="true">
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <category>Фотографии</category>
        <author>{{ post.author }}</author>
        <media:rating scheme="urn:simple">nonadult</media:rating>
        <media:content type="image/jpeg"
                       medium="image"
                       url="http://img.dxfoto.ru/m/{{post.date | date: "%Y"}}/{{post.date | date: "%m"}}/{{post.date | date: "%Y-%m-%d"}}.jpg">
          <media:description type="plain">{{ post.title | xml_escape }}</media:description>
          <media:copyright>CC-BY {{ post.author }} / dxfoto.ru</media:copyright>
        </media:content>
        <enclosure url="http://img.dxfoto.ru/m/{{post.date | date: "%Y"}}/{{post.date | date: "%m"}}/{{post.date | date: "%Y-%m-%d"}}.jpg" type="image/jpeg" length="0" />
        <description><![CDATA[
{{ post.content | markdownify | strip_html | xml_escape }}
        ]]></description>
        <content:encoded><![CDATA[
          <figure>
            <img src="http://img.dxfoto.ru/m/{{post.date | date: "%Y"}}/{{post.date | date: "%m"}}/{{post.date | date: "%Y-%m-%d"}}.jpg" />
            <figcaption>
              {{ post.title | xml_escape }}
              <span class="copyright">(CC-BY {{ post.author }} / dxfoto.ru)</span>
            </figcaption>
          </figure>
          {{ post.content | markdownify }}
        ]]></content:encoded>
        <turbo:content><![CDATA[
          <header>
            <figure>
              <img src="https://www.dxfoto.ru/logo.png" />
            </figure>
            <h1>dxfoto.ru</h1>
          </header>
          <h2>{{ post.title | xml_escape }}</h2>
          <img src="http://img.dxfoto.ru/m/{{post.date | date: "%Y"}}/{{post.date | date: "%m"}}/{{post.date | date: "%Y-%m-%d"}}.jpg" />
          {{ post.content | markdownify }}
          <small>(CC-BY {{ post.author }} / dxfoto.ru)</small>
        ]]></turbo:content>
      </item>
    {% endfor %}
  </channel>
</rss>
